<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="mb-4">Contact Us</h1>
            
            <% if (user) { %>
                <div class="alert alert-info">
                    <h4 class="alert-heading">Have a complaint about an order?</h4>
                    <p>If you have a complaint about a specific order, please use our complaint system.</p>
                    <hr>
                    <div class="d-flex gap-2">
                        <a href="/complaints/submit" class="btn btn-primary">Submit Complaint</a>
                        <a href="/complaints/my-complaints" class="btn btn-outline-secondary">View My Complaints</a>
                    </div>
                </div>
            <% } else { %>
                <div class="alert alert-warning">
                    <h4 class="alert-heading">Login Required</h4>
                    <p>To submit complaints about orders, please <a href="/auth/login" class="alert-link">login</a> to your account first.</p>
                </div>
            <% } %>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">General Contact Form</h2>
                    <p class="text-muted mb-3">For general inquiries, feedback, or other questions not related to specific orders.</p>
                    <form action="/contact" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h2 class="h4 mb-3">Contact Information</h2>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            123 Fashion Street, London, UK
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-phone me-2"></i>
                            +44 123 456 7890
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2"></i>
                            info@erdem.com
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 